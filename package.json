{
  "name": "role",
  "version": "1.0.0",
  "description": "Локальное приложение для анализа персонажей художественных произведений",
  "main": "scripts/start.js",
  "scripts": {
    "start": "./scripts/start.sh",
    "stop": "./scripts/stop.sh",
    "switch": "./scripts/switch-ai-provider.sh",
    "kill-ports": "./scripts/kill-ports.sh",
    "init-nlp-models": "python3 scripts/init_models.py",
    "dev": "npm run start",
    "build": "cd frontend && npm run build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint:md:fix": "markdownlint --fix **/*.md && prettier --write **/*.md",
    "show-user-projects": "cd backend && python scripts/show_user_projects.py",
    "import-checklists": "cd backend && python scripts/import_checklists.py",
    "clear-checklists": "cd backend && python scripts/clear_checklists.py",
    "clear-checklists-force": "cd backend && python scripts/clear_checklists.py --clear-all --force",
    "list-checklists": "cd backend && python scripts/clear_checklists.py --list",
    "logs": "cd backend && python scripts/view_nlp_logs.py",
    "reset_db": "cd backend && python scripts/reset_database.py"
  },
  "keywords": [
    "character-analysis",
    "literature",
    "ai",
    "nlp",
    "acting"
  ],
  "author": "Role Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "markdownlint-cli": "^0.31.1",
    "prettier": "^2.8.8"
  },
  "engines": {
    "node": ">=18.0.0",
    "python": ">=3.9.0"
  }
}
