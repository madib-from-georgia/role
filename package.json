{
  "name": "role",
  "version": "1.0.0",
  "description": "Локальное приложение для анализа персонажей художественных произведений",
  "main": "scripts/start.js",
  "scripts": {
    "start": "./scripts/start.sh",
    "stop": "./scripts/stop.sh",
    "switch": "./scripts/switch-ai-provider.sh",
    "kill-ports": "./scripts/kill-ports.sh",
    "init-nlp-models": "python3 scripts/init_models.py",
    "dev": "npm run start",
    "build": "cd frontend && npm run build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "type-check": "cd frontend && npx tsc --noEmit",
    "type-check:strict": "cd frontend && npx tsc --noEmit --strict --noUnusedLocals --noUnusedParameters",
    "lint": "cd frontend && npm run lint",
    "pre-push-check": "npm run type-check:strict && npm run lint",
    "lint:md:fix": "markdownlint --fix **/*.md && prettier --write **/*.md",
    "show-user-projects": "cd backend && . ../.venv/bin/activate && python scripts/show_user_projects.py",
    "import-checklists": "cd backend && . ../.venv/bin/activate && python scripts/import_checklists.py",
    "clear-checklists": "cd backend && . ../.venv/bin/activate && python scripts/clear_checklists.py",
    "clear-checklists-force": "cd backend && . ../.venv/bin/activate && python scripts/clear_checklists.py --clear-all --force",
    "list-checklists": "cd backend && . ../.venv/bin/activate && python scripts/clear_checklists.py --list",
    "logs": "cd backend && . ../.venv/bin/activate && python scripts/view_nlp_logs.py",
    "reset_db": "cd backend && . ../.venv/bin/activate && python scripts/reset_database.py",
    "convert-portrait": "ts-node scripts/convert-portrait.ts \"$@\"",
    "split-checklist": "python scripts/split-checklist.py \"$@\""
  },
  "keywords": [
    "character-analysis",
    "literature",
    "ai",
    "nlp",
    "acting"
  ],
  "author": "Role Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "concurrently": "^8.2.2",
    "markdownlint-cli": "^0.31.1",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "python": ">=3.9.0"
  },
  "dependencies": {
    "marked": "^16.1.2"
  }
}
