# Пример файла конфигурации для системы "Роль"
# Скопируйте этот файл в .env и заполните своими данными

# Основные настройки приложения
APP_NAME=Роль
DEBUG=false
VERSION=1.0.0

# Авторизация
AUTH_ENABLED=true

# База данных
DATABASE_URL=sqlite:///./database.db

# JWT настройки
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Безопасность
BCRYPT_ROUNDS=12
RATE_LIMIT_PER_MINUTE=100

# Файлы
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=104857600
ALLOWED_EXTENSIONS=["txt", "pdf", "fb2", "epub"]

# CORS настройки
CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000", "http://127.0.0.1:5173", "http://127.0.0.1:3000"]

# NLP настройки
NLP_MODEL_PATH=./models
NLP_TIMEOUT_SECONDS=300

# ============================================
# EMAIL НАСТРОЙКИ (для функции "Забыли пароль?")
# ============================================

# SMTP сервер (выберите один из вариантов ниже)
SMTP_SERVER=smtp.yandex.ru
SMTP_PORT=587
SMTP_USE_TLS=true

# Ваши учетные данные
SMTP_USERNAME=your-email@yandex.ru
SMTP_PASSWORD=your-app-password-here
EMAIL_FROM=your-email@yandex.ru
EMAIL_FROM_NAME=Роль


