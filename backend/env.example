# Основные настройки приложения
APP_NAME="Анализ Персонажей"
DEBUG=true
VERSION="1.0.0"

# База данных
DATABASE_URL="sqlite:///./database.db"

# JWT Authentication
JWT_SECRET_KEY="your-super-secret-jwt-key-change-in-production-please"
JWT_ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Безопасность
BCRYPT_ROUNDS=12
RATE_LIMIT_PER_MINUTE=100

# Файлы
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE=104857600  # 100MB в байтах
ALLOWED_EXTENSIONS="txt,pdf,fb2,epub"

# CORS Origins (разделенные запятыми)
CORS_ORIGINS="http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173,http://127.0.0.1:3000"

# NLP настройки
NLP_MODEL_PATH="./models"
NLP_TIMEOUT_SECONDS=300